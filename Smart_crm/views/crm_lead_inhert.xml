<odoo>
    <record id="view_crm_lead_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//group/group/field[@name='partner_name']" position="replace"></xpath>
            <xpath expr="//group/group/div[@class='o_address_format']" position="attributes">
                 <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/label" position="attributes">
                 <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='website']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/label[@for='contact_name']" position="attributes">
                 <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/div/field[@name='contact_name']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/div/field[@name='title']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='email_from']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='function']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='phone']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='mobile']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='priority']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='tag_ids']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//notebook" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_crm_lead_oppor_form_inherit" model="ir.ui.view">
        <field name="name">crm.lead.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//div/h2[@class='o_row']" position="attributes">
                 <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='email_from']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='phone']" position="attributes">
                 <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='date_deadline']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='priority']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//group/group/field[@name='tag_ids']" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
            <xpath expr="//notebook" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>